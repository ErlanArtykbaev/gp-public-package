{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "es2015",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports":true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noLib": false,
    "noEmit": false,
    "jsx": "react",
    "outDir": "dist",
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "es7"
    ],
    "baseUrl": "packages",
    "typeRoots": [
      "node_modules/@types",
      "packages/gp-module-gis/node_modules/@types",
      "packages/gp-types/src"
    ]
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "packages/gp-ui/**/*.ts",
    "packages/gp-ui/**/*.tsx",
    "packages/gp-styled-ui/**/*.ts",
    "packages/gp-styled-ui/**/*.tsx"
  ],
  "extensions": [".ts", ".tsx", ".js", ".jsx"]
}
